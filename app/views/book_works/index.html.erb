<h1>Bookwork</h1>

<%= link_to "Create New Item", new_book_work_path %>

<% @bookWorks.each do |bookwork|%>
  <p><%= link_to bookwork.title, book_work_path(bookwork) %></p>
  <p><%= bookwork.subtitle %></p>
  <p><%= bookwork.body %></p>
  <%= image_tag bookwork.thumb_image unless bookwork.thumb_image.nil? %>
  <%= link_to "Edit", edit_book_work_path(bookwork) %>
  <%= link_to "Delete", bookwork, method: :delete, data: { confirm: "Are you sure?" } %>
<% end %>
